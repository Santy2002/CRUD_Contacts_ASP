<!-- Aca uso IEnumerable porque el model que voy a usar es una coleccion de datos del tipo Usuario
Por eso despues puedo usar metodos especificos de una coleccion como Count o DisplayNameFor, etc.
-->
@model IEnumerable<CRUD_ASP.Models.Usuario>
@{
    ViewData["Title"] = "Inicio";
}
<!--Class de Boostrap5-->
<h1 class="text-center">CRUD Usuarios</h1>
<div class="row">

    <div class="col-12 mb-1">
        <a asp-action="Crear" asp-controller="Home" class="btn btn-success"><i class="bi bi-file-plus-fill"></i> Nuevo Usuario</a>
    </div>

</div>

<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card header">
                <h3 class="m-2"><strong>Lista de usuarios</strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="tblUsuarios" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                    <th>@Html.DisplayNameFor(m => m.Telefono)</th>
                                    <th>@Html.DisplayNameFor(m => m.Celular)</th>
                                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Id)</td>
                                        <td>@Html.DisplayFor(m => item.Nombre)</td>
                                        <td>@Html.DisplayFor(m => item.Telefono)</td>
                                        <td>@Html.DisplayFor(m => item.Celular)</td>
                                        <td>@Html.DisplayFor(m => item.Email)</td>
                                        <td>
                                            <!-- Estos asp action van a buscar los metodos de tipo HttpGet ya que 
                                            van a ir a buscar una vista (View) llamada como este adentro del action
                                            -->
                                            <a class="btn btn-primary" asp-action="Editar" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i> Editar</a>
                                            <a class="btn btn-secondary" asp-action="Detalle" asp-route-id="@item.Id"><i class="bi bi-info-circle-fill"></i> Detalles</a>
                                            <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@item.Id"><i class="bi bi-eraser-fill"></i> Borrar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>